# 环境变量配置文件
# 复制此文件为 .env 并修改相应的值

# MySQL 配置
MYSQL_ROOT_PASSWORD=your_secure_password_here
MYSQL_DATABASE=zoj

# Redis 配置
REDIS_PASSWORD=your_redis_password_here

# RabbitMQ 配置
RABBITMQ_USER=itheima
RABBITMQ_PASSWORD=your_rabbitmq_password_here

# Nacos 配置
NACOS_SERVER_ADDR=nacos:8848

# JWT 配置
JWT_SECRET=your_jwt_secret_key_here

# 代码沙箱配置
CODESANDBOX_BASE_URL=http://host.docker.internal:8080
CODESANDBOX_ACCESS_KEY=zoj
CODESANDBOX_SECRET_KEY=your_codesandbox_secret_key_here

# 微信配置（可选）
WX_MP_TOKEN=your_wechat_token_here
WX_MP_AES_KEY=your_wechat_aes_key_here
WX_MP_APP_ID=your_wechat_app_id_here
WX_MP_SECRET=your_wechat_secret_here

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs

# 监控配置
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
